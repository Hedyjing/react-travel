{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node", // 下面属性的前提
    "resolveJsonModule": true, // 允许在tsx中引入json文件
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "plugins": [{
      "name": "typescript-plugin-css-modules"  // 配置完插件后编辑器有了css的提示
    }]
  },
  "include": [
    "src"
  ]
}
